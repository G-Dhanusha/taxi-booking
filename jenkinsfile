pipeline {
    agent any

    stages {
        stage('clone the code') {
            steps {
                echo 'cloning'
                checkout scmGit(branches: [[name: '*/dev']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/ameelmohammad/taxi-booking.git']])
            }
        }    
        stage('build the code') {
            steps {
                echo 'build'
                sh 'mvn package'
            }
        }
        stage('sonarqube scanner') {
            steps {
                echo 'sonarqube'
                sh 'mvn clean verify sonar:sonar -Dsonar.projectKey=ameel -Dsonar.host.url=http://65.2.57.165:9000 -Dsonar.login=sqp_85cc3c01e46f87f5ec9556231ee142ed9889165a'
            }
        }
        stage('delpoy the code') {
            steps {
                echo 'Deploy'
                deploy adapters: [tomcat9(credentialsId: '816f4dba-c68d-4366-ad66-ac6d912ff067', path: '', url: 'http://65.2.57.165:8080')], contextPath: null, onFailure: false, war: '**/*.war'
            }
        }
    }
}
